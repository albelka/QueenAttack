<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>Queen Attack</title>
	</head>
	<body>
		<div class="container">
      <div class="jumbotron">
        <h1>Check to see if the queen can take the piece</h1>
      </div>
			<div class="row">
				<div class="col-md-12">
          @{
            var squareCount = 0;
            for (var gridRow = 0; gridRow < 8; gridRow++)
            {
              squareCount++;
              for (var gridColumn = 0; gridColumn < 8; gridColumn++)
              {
                if (Model.GetX() == gridColumn && Model.GetY() == gridRow)
                {
                  squareCount++;
                  <form>
                    <input type="hidden" value="@gridRow+gridColumn">
                    <button type="click" class="queen"></button>
                  </form>
                }
                else
                {
                  squareCount++;
                  if (squareCount % 2 == 0 )
                  {
                    <form action="/result" method="Post">
                      <input type="hidden" name="clicked" value="@gridRow+gridColumn">
                      <button type="submit" class="dark"></button>
                    </form>
                  }
                  else
                  {
                    <form action="/result" method="Post">
                      <input type="hidden" value="@gridRow+gridColumn">
                      <button type="submit" class="light"></button>
                    </form>
                  }
                }
              }
            }
          }
				</div>
			</div>
		</div>
	</body>
</html>
